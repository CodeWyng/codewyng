{
  "manifest_version": 2,
  "name": "CodeWyng",
  "version": "1.0",
  "description": "Browse GitHub like an IDE.",
  "icons": {
    "128": "icon-128.png"
  },
  "content_scripts": [
    {
      "js": ["content.js"],
      "css": ["tippy.css", "light-border.css", "github.css", "custom.css"],
      "matches": ["https://github.com/*"]
    }
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "permissions": ["https://github.com/*", "storage"],
  "content_security_policy": "script-src 'self' https://apis.google.com; object-src 'self'",
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "CodeWyng settings"
  }
}
