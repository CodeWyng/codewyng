{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowJs": true,
    "inlineSourceMap": true,
    "target": "ESNext",
    "noEmit": true,
    "lib": [
      "ESNext",
      "dom"
    ],
    "skipLibCheck": true,
    "strictNullChecks": true,
    "jsx": "react",
    "types": [
      "chrome"
    ],
    "strict": true,
    "plugins": [
      {
        "name": "typescript-tslint-plugin",
        "alwaysShowRuleFailuresAsWarnings": false,
        "suppressWhileTypeErrorsPresent": false
      }
    ]
  },
  "include": [
    "src"
  ]
}
